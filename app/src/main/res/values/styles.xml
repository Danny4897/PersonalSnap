    </style>

    <style name="AppText.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppText.Bold.ColorPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppText.Regular.White">
    </style>

    <style name="AppText.Regular.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppText.Regular.ColorPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="AppText.Regular.White.Large">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="AppText.Regular.Black.Large">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="AppText.Regular.ColorPrimary.Large">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="AppText.Regular.White.Small">
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="AppText.Regular.Black.Small">
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="AppText.Regular.ColorPrimary.Small">
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="AppText.Bold.White.Large">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="AppText.Bold.Black.Large">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="AppText.Bold.ColorPrimary.Large">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="AppText.Bold.White.Small">
        <item name="android:textSize">@dimen/text_s</item>
